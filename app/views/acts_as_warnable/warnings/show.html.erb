<h1>Warning #<%= @warning.id %> (from <%= @warning.source %>)</h1>
<div class='row'>
  <%= @warning.message %>
</div>
<div class='row'>
  <% if @warning.dismissed? %>
    Dismissed by <%= @warning.dismisser.try(:full_name) || @warning.dismisser.try(:email) || 'someone' %>
    on <%= @warning.dismissed_at.strftime('%c') %>
  <% else %>
    <%= link_to "##{warning.id}: #{warning.message.truncate(10)}", ActsAsWarnable::Engine.routes.url_helpers.warning_path(warning) %>
  <% end %>
</div>
